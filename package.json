{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Basic backend Chat app",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "dev": "babel-watch src/index.js",
    "create-tables": "babel-node src/database/connection createAllTables",
    "drop-tables": "babel-node src/database/connection dropAllTables",
    "setup": "npm-run-all create-dev-tables",
    "start": "babel-node src/index.js",
    "pretest": "cross-env NODE_ENV=test npm-run-all drop-tables && cross-env NODE_ENV=test npm-run-all create-tables",
    "test": "cross-env NODE_ENV=test jest --coverage --runInBand --detectOpenHandles --forceExit"
  },
  "author": "Verdotte Aututu",
  "license": "ISC",
  "devDependencies": {
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.8.0",
    "make-runnable": "^1.3.8",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.12.13",
    "babel-watch": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "npm-run-all": "^4.1.5",
    "pg": "^8.5.1",
    "pg-format": "^1.0.4",
    "socket.io": "^2.3.0"
  }
}
